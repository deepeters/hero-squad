{{#partial "title"}}Add hero{{/partial}}

{{#block "styles"}}
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" href="../css/styles.css">
{{/block}}

{{#partial "content"}}
    <h1>New Hero:</h1>
    <div class="container">
        <form action="/hero" method="post">
            <label for="heroName">Hero's name</label>
            <input class="form-control" type="text" id="heroName" name="heroName" placeholder="e.g.Batman">
            <label for="heroPower">Hero's super power</label>
            <input class="form-control" type="text" id="heroPower" name="heroPower" placeholder="e.g. Passion for Gotham">
            <label for="heroWeakness">Hero's weakness</label>
            <input class="form-control" type="text" id="heroWeakness" name="heroWeakness" placeholder="e.g Nan (Batman has no weakness)">
            <label for="heroAge">Hero's age</label>
            <input class="form-control" type="text" id="heroAge" name="heroAge" placeholder="e.g. 30">
            {{#if squads}}
                {{#each squads}}
                    {{#if sizeCheck}}
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="heroSquad" id="heroSquad" value="{{id}}">
                            <label class="form-check-label" for="heroSquad">
                                {{squadName}}
                            </label>
                        </div>
                    {{/if}}
                {{/each}}
            {{/if}}
            <br>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    </div>
{{/partial}}

{{> layout.hbs}}